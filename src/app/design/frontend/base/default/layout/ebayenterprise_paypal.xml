<layout version="1.4.0">
	<checkout_cart_index>
		<reference name="checkout.cart.top_methods">
			<block type="ebayenterprise_paypal/express_shortcut"
			       name="checkout.cart.methods.ebayenterprise_paypal_express.top" before="-"
			       template="ebayenterprise_paypal/express/shortcut.phtml">
				<action method="setIsQuoteAllowed">
					<value>1</value>
				</action>
			</block>
		</reference>

		<reference name="checkout.cart.methods">
			<block type="ebayenterprise_paypal/express_shortcut"
			       name="checkout.cart.methods.ebayenterprise_paypal_express.bottom" before="-"
			       template="ebayenterprise_paypal/express/shortcut.phtml">
				<action method="setIsQuoteAllowed">
					<value>1</value>
				</action>
			</block>
		</reference>

		<update handle="SHORTCUT_popup"/>
	</checkout_cart_index>

	<!-- paypal-express/checkout/review/ -->
	<ebayenterprise_paypal_express_checkout_review translate="label">
		<label>PayPal Express Order Review Form</label>
		<remove name="right"/>
		<remove name="left"/>

		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
			</action>
		</reference>
		<reference name="content">
			<block type="ebayenterprise_paypal/express_review" name="ebayenterprise_paypal.express.review"
			       template="ebayenterprise_paypal/express/review.phtml">
				<block type="ebayenterprise_paypal/express_review" name="express.review.shipping.method"
				       as="shipping_method" template="ebayenterprise_paypal/express/review/shipping/method.phtml"/>
				<block type="ebayenterprise_paypal/express_review_details"
				       name="ebayenterprise_paypal.express.review.details" as="details"
				       template="ebayenterprise_paypal/express/review/details.phtml">
					<action method="addItemRender">
						<type>default</type>
						<block>checkout/cart_item_renderer</block>
						<template>checkout/onepage/review/item.phtml</template>
					</action>
					<action method="addItemRender">
						<type>grouped</type>
						<block>checkout/cart_item_renderer_grouped</block>
						<template>checkout/onepage/review/item.phtml</template>
					</action>
					<action method="addItemRender">
						<type>configurable</type>
						<block>checkout/cart_item_renderer_configurable</block>
						<template>checkout/onepage/review/item.phtml</template>
					</action>
					<block type="checkout/cart_totals" name="ebayenterprise_paypal.express.review.details.totals"
					       as="totals" template="checkout/onepage/review/totals.phtml"/>
				</block>
				<block type="checkout/agreements" name="ebayenterprise_paypal.express.review.details.agreements"
				       as="agreements" template="checkout/onepage/agreements.phtml"/>
			</block>
		</reference>
		<reference name="head">
			<action method="addItem">
				<type>skin_js</type>
				<name>js/checkout/review.js</name>
			</action>
		</reference>
		<block type="core/text_list" name="additional.product.info"/>
	</ebayenterprise_paypal_express_checkout_review>

	<ebayenterprise_paypal_express_checkout_review_details>
		<block type="ebayenterprise_paypal/express_review_details" name="root" output="toHtml"
		       template="ebayenterprise_paypal/express/review/details.phtml">
			<action method="addItemRender">
				<type>default</type>
				<block>checkout/cart_item_renderer</block>
				<template>checkout/onepage/review/item.phtml</template>
			</action>
			<action method="addItemRender">
				<type>grouped</type>
				<block>checkout/cart_item_renderer_grouped</block>
				<template>checkout/onepage/review/item.phtml</template>
			</action>
			<action method="addItemRender">
				<type>configurable</type>
				<block>checkout/cart_item_renderer_configurable</block>
				<template>checkout/onepage/review/item.phtml</template>
			</action>
			<block type="checkout/cart_totals" name="ebayenterprise_paypal.express.review.details.totals" as="totals"
			       template="checkout/onepage/review/totals.phtml"/>
		</block>
	</ebayenterprise_paypal_express_checkout_review_details>

	<!--
	Available logo types can be assigned with action="setLogoType":
	 - wePrefer_150x60
	 - wePrefer_150x40
	 - nowAccepting_150x60
	 - nowAccepting_150x40
	 - paymentsBy_150x60
	 - paymentsBy_150x40
	 - shopNowUsing_150x60
	 - shopNowUsing_150x40
	-->
	<catalog_product_view>
		<reference name="product.info.addtocart">
			<block type="page/html_wrapper" name="product.info.addtocart.ebayenterprise_paypal.wrapper" translate="label">
				<label>PayPal Express Checkout Shortcut Wrapper</label>
				<block type="ebayenterprise_paypal/express_shortcut" name="product.info.addtocart.ebayenterprise_paypal"
				       template="ebayenterprise_paypal/express/shortcut.phtml">
					<action method="setIsOnCatalogProductPage">
						<value>1</value>
					</action>
				</block>
			</block>
		</reference>
		<update handle="SHORTCUT_popup"/>
		<reference name="right">
			<block type="ebayenterprise_paypal/logo" name="ebayenterprise_paypal.partner.right.logo" template="ebayenterprise_paypal/partner/logo.phtml">
				<!--action method="setLogoType"><value>wePrefer_150x60</value></action-->
			</block>
		</reference>
	</catalog_product_view>

	<catalog_category_default>
		<update handle="SHORTCUT_popup"/>
		<reference name="right">
			<block type="ebayenterprise_paypal/logo" name="ebayenterprise_paypal.partner.right.logo" template="ebayenterprise_paypal/partner/logo.phtml"/>
		</reference>
	</catalog_category_default>

	<catalog_category_layered>
		<update handle="SHORTCUT_popup"/>
		<reference name="right">
			<block type="ebayenterprise_paypal/logo" name="ebayenterprise_paypal.partner.right.logo" template="ebayenterprise_paypal/partner/logo.phtml"/>
		</reference>
	</catalog_category_layered>

	<catalog_product_compare_index>
		<update handle="SHORTCUT_popup"/>
	</catalog_product_compare_index>

	<catalogsearch_result_index>
		<update handle="SHORTCUT_popup"/>
	</catalogsearch_result_index>

	<catalogsearch_advanced_result>
		<update handle="SHORTCUT_popup"/>
	</catalogsearch_advanced_result>

	<tag_product_list>
		<update handle="SHORTCUT_popup"/>
	</tag_product_list>
	<tag_customer_view>
		<update handle="SHORTCUT_popup"/>
	</tag_customer_view>

	<wishlist_index_index>
		<update handle="SHORTCUT_popup"/>
	</wishlist_index_index>
	<review_product_list>
		<update handle="SHORTCUT_popup"/>
	</review_product_list>

	<checkout_onepage_success>
		<update handle="SHORTCUT_popup"/>
	</checkout_onepage_success>
	<checkout_onepage_failure>
		<update handle="SHORTCUT_popup"/>
	</checkout_onepage_failure>

	<cms_index_index>
		<reference name="right">
			<block type="ebayenterprise_paypal/logo" name="ebayenterprise_paypal.partner.right.logo" template="ebayenterprise_paypal/partner/logo.phtml"/>
		</reference>
	</cms_index_index>

	<default>
		<reference name="topCart.extra_actions">
			<block type="ebayenterprise_paypal/express_shortcut" name="ebayenterprise_paypal.partner.top_cart.shortcut" template="ebayenterprise_paypal/express/shortcut.phtml"/>
		</reference>
		<reference name="cart_sidebar.extra_actions">
			<block type="ebayenterprise_paypal/express_shortcut"
			       name="ebayenterprise_paypal.partner.cart_sidebar.shortcut"
			       template="ebayenterprise_paypal/express/shortcut.phtml"/>
		</reference>
	</default>
	<SHORTCUT_popup>
		<reference name="product.tooltip">
			<block type="page/html_wrapper" name="product.info.addtocart.paypal.wrapper" translate="label">
				<block type="ebayenterprise_paypal/express_shortcut" name="ebayenterprise_paypal.product.info.addtocart"
				       template="ebayenterprise_paypal/express/shortcut.phtml">
					<action method="setIsOnCatalogProductPage">
						<value>1</value>
					</action>
					<action method="setShowOrPosition">
						<value>after</value>
					</action>
				</block>
			</block>
		</reference>
	</SHORTCUT_popup>
</layout>
